@inherits LayoutComponentBase

<a href="#main-content" class="skip-link visually-hidden-focusable">
    Przejdź do treści głównej
</a>

<div class="page">
    <header class="top-header">
        <UserMenu />
    </header>

    <nav class="sidebar" aria-label="Menu główne">
        <NavMenu />
    </nav>

    <main id="main-content" role="main">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" role="alert" aria-live="assertive" data-nosnippet>
    Wystąpił nieoczekiwany błąd.
    <a href="." class="reload">Przeładuj</a>
    <button class="dismiss" aria-label="Zamknij komunikat błędu">🗙</button>
</div>
